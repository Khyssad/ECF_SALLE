{% extends 'base.html.twig' %}

{% block title %}Admin Reservations{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold mb-6">Admin Reservations</h1>

    <table class="min-w-full bg-white">
        <thead>
            <tr>
                <th class="py-2 px-4 border-b">Room</th>
                <th class="py-2 px-4 border-b">Start Date</th>
                <th class="py-2 px-4 border-b">End Date</th>
                <th class="py-2 px-4 border-b">Status</th>
                <th class="py-2 px-4 border-b">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td class="py-2 px-4 border-b">{{ reservation.room.name }}</td>
                <td class="py-2 px-4 border-b">{{ reservation.startDate|date('Y-m-d H:i') }}</td>
                <td class="py-2 px-4 border-b">{{ reservation.endDate|date('Y-m-d H:i') }}</td>
                <td class="py-2 px-4 border-b">{{ reservation.status }}</td>
                <td class="py-2 px-4 border-b">
                    <a href="{{ path('admin_reservation_edit', {'id': reservation.id}) }}" class="text-blue-600 hover:underline">Edit</a>
                    <form method="post" action="{{ path('admin_reservation_delete', {'id': reservation.id}) }}" onsubmit="return confirm('Are you sure you want to delete this reservation?');" style="display: inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
                        <button type="submit" class="text-red-600 hover:underline ml-2">Delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="py-2 px-4 border-b text-center">No reservations found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}