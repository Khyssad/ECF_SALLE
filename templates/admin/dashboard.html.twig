{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold mb-6">Admin Dashboard</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <div class="bg-white shadow rounded-lg p-4">
            <h2 class="text-xl font-semibold mb-2">Pre-reservations</h2>
            <p class="text-3xl font-bold">{{ pre_reservations_count }}</p>
        </div>
        <div class="bg-white shadow rounded-lg p-4">
            <h2 class="text-xl font-semibold mb-2">Confirmed Reservations</h2>
            <p class="text-3xl font-bold">{{ confirmed_reservations_count }}</p>
        </div>
        <div class="bg-white shadow rounded-lg p-4">
            <h2 class="text-xl font-semibold mb-2">Total Rooms</h2>
            <p class="text-3xl font-bold">{{ rooms_count }}</p>
        </div>
        <div class="bg-white shadow rounded-lg p-4">
            <h2 class="text-xl font-semibold mb-2">Total Users</h2>
            <p class="text-3xl font-bold">{{ users_count }}</p>
        </div>
    </div>

    <div class="mt-8">
        <h2 class="text-2xl font-bold mb-4">Quick Actions</h2>
        <a href="{{ path('app_room_index') }}" class="bg-blue-500 text-white px-4 py-2 rounded mr-2">Manage Rooms</a>
        <a href="{{ path('admin_pending_reservations') }}" class="bg-green-500 text-white px-4 py-2 rounded">Manage Reservations</a>
    </div>
{% endblock %}