{% extends 'base.html.twig' %}

{% block title %}Room details{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold mb-6">Room details</h1>

    <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-2xl font-semibold mb-4">{{ room.name }}</h2>
        <p class="mb-2"><strong>Capacity:</strong> {{ room.capacity }}</p>
        <p class="mb-2"><strong>Equipment:</strong> {{ room.equipment|join(', ') }}</p>
        <p class="mb-4"><strong>Ergonomics:</strong> {{ room.ergonomics|join(', ') }}</p>

        <a href="{{ path('app_reservation_new', {'roomId': room.id}) }}" class="bg-green-500 text-white px-4 py-2 rounded mr-2">Reserve this room</a>
        <a href="{{ path('app_room_edit', {'id': room.id}) }}" class="bg-blue-500 text-white px-4 py-2 rounded mr-2">Edit</a>
        <a href="{{ path('app_room_index') }}" class="bg-gray-500 text-white px-4 py-2 rounded">Back to list</a>
    </div>
{% endblock %}